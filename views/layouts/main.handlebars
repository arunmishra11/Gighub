<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GigHub</title>
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/daisyui@2.6.0/dist/full.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Give+You+Glory&family=La+Belle+Aurore&family=Oswald:wght@200..700&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&family=Rubik:ital,wght@0,300..900;1,300..900&family=Train+One&family=Ubuntu+Sans:ital,wght@0,100..800;1,100..800&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <div
      class="navbar bg-blue-500 h-32 mb-14 border-4 z-[999] flex items-center justify-between w-full"
    >

      <a href="/" class="btn btn-ghost text-xl text-white text-lg">GigHub</a>
      <ul class="menu menu-horizontal px-1">
        <li><a href="/gigRepo" class="text-white text-lg">View Gigs</a></li>
        <li><a href="/gigPost" class="text-white text-lg">Post Gigs</a></li>
        <li><a href="/loginSignup" class="text-white text-lg">Sign Up</a></li>
      </ul>
    </div>
    {{{body}}}

    <!-- Render script for logged in users only -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
    {{/if}}
  </body>

  <footer
    class="footer p-10 bg-blue-500 h-24 text-black flex justify-between items-center fixed bottom-0 left-0 w-full"
  >
    <aside class="flex items-center">
      <img
        src="/img/Gig-Hub-Logo-2.png"
        alt="GigHub Logo"
        class="w-13 h-12 mr-4 ml-2"
      />
      <div>
        <h6 class="text-lg font-semibold">GigHub</h6>
        <p>Connecting talent with opportunities</p>
      </div>
    </aside>
    <div class="flex items-center mr-2">
      <h6
        class="footer-title text-lg font-semibold mb-2 mr-4 text-black"
      >GitHub</h6>
      <div class="grid grid-flow-col gap-4">
        <a
          href="https://github.com/arunmishra11/Gighub.git"
          aria-label="GitHub"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            class="fill-current"
          >
